<?xml version="1.0"?>
<configuration version="37">
    <folder id="default-sync"
            label="Syncthing Shared Volume"
            path="/shared"
            type="sendreceive"
            rescanIntervalS="3600"
            fsWatcherEnabled="true"
            fsWatcherDelayS="10">
        
        <!-- Configure versioning -->
        <versioning type="staggered">
            <param key="cleanInterval" val="3600"/>
            <param key="maxAge" val="31536000"/>
            <param key="versionsPath" val="/shared/.stversions"/>
        </versioning>
        
        <!-- Ignore patterns for specific file types or directories -->
        <filesystemType>basic</filesystemType>
        <ignorePerms>false</ignorePerms>
        <ignoreDelete>false</ignoreDelete>
        
        <type>sendreceive</type>
        <markerName>.stfolder</markerName>
        
        <!-- Optional: Selective sync -->
        <pulls>
            <device>*</device>
        </pulls>
        
        <!-- Advanced file watching -->
        <copiers>0</copiers>
        <pullers>0</pullers>
        <hashers>0</hashers>
        
        <order>random</order>
    </folder>
</configuration>
